<div class="container">
  <div class="row">
    <aside class="col-md-3">
      <img src="/stylists/<%= @stylist.id %>.jpg" class='stylist-avatar'>

      <h3><%= @stylist.full_name %></h3>
      <p class='text-muted'><%= @stylist.email %></p>

    </aside>

    <div class="col-md-9">

      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Requested Kiqs</h3>

          <div>
            <h4><%= @kiq_count %></h4>
          </div>

          <%= link_to 'View', stylists_kiqs_path, class: 'btn btn-success' %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <h3>Conversations</h3>

          <div>
            <h4><%= @conversation_count %></h4>
          </div>

          <%= link_to 'View', stylists_conversations_path, class: 'btn btn-success' %>
        </div>
      </div>

    </div>
  </div>
</div>
